<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/logo_transparent.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <script type="module" src="https://cdn.jsdelivr.net/npm/@@shoelace-style/shoelace@2.15.1/cdn/shoelace-autoloader.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NERA_Presentation.styles.css" asp-append-version="true" />
</head>
<body>

    <header class="site-header">
        <div class="inner">
            <a class="brand" asp-page="/Index" aria-label="NERA">
                <img class="logo" src="~/logo_transparent.png" alt="NERA" />
            </a>
            <div class="header-actions">
                @if (User.Identity?.IsAuthenticated ?? false)
                {   
                    <span>Hello, @User.Identity?.Name</span>
                    <a asp-page="/Logout">
                        <sl-button size="small" pill class="btn-gradient">Logout</sl-button>
                    </a>
                }
                else
                {
                    <a asp-page="/Login" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString">
                        <sl-button size="small" pill class="btn-gradient">Login</sl-button>
                    </a>
                }
                <a asp-page="/Index">
                    <sl-button size="/small" pill class="btn-ghost">Event Registration</sl-button>
                </a>
                <a asp-page="/createevent" style="text-decoration:none">
                    <sl-button size="small" pill class="btn-gradient">Create Event</sl-button>
                </a>
                <sl-avatar size="small" label="Profile"></sl-avatar>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>